# ETL Connectors - Environment Variables Template
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# =============================================================================
# ENVIRONMENT SELECTION
# =============================================================================
ACTIVE_ENVIRONMENT=dev

# =============================================================================
# KAFKA - DEVELOPMENT ENVIRONMENT
# =============================================================================
KAFKA_DEV_BOOTSTRAP=localhost:9092
KAFKA_DEV_SECURITY_PROTOCOL=PLAINTEXT
KAFKA_DEV_SASL_MECHANISM=
KAFKA_DEV_USERNAME=
KAFKA_DEV_PASSWORD=
KAFKA_DEV_SSL_CA_PATH=
KAFKA_DEV_SSL_CERT_PATH=
KAFKA_DEV_SSL_KEY_PATH=

# =============================================================================
# KAFKA - QA ENVIRONMENT
# =============================================================================
KAFKA_QA_BOOTSTRAP=kafka-qa.example.com:9093
KAFKA_QA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_QA_SASL_MECHANISM=PLAIN
KAFKA_QA_USERNAME=qa_user
KAFKA_QA_PASSWORD=qa_password_here
KAFKA_QA_SSL_CA_PATH=/path/to/qa/ca.pem
KAFKA_QA_SSL_CERT_PATH=
KAFKA_QA_SSL_KEY_PATH=

# =============================================================================
# KAFKA - STAGING ENVIRONMENT
# =============================================================================
KAFKA_STAGING_BOOTSTRAP=kafka-staging.example.com:9093
KAFKA_STAGING_SECURITY_PROTOCOL=SASL_SSL
KAFKA_STAGING_SASL_MECHANISM=PLAIN
KAFKA_STAGING_USERNAME=staging_user
KAFKA_STAGING_PASSWORD=staging_password_here
KAFKA_STAGING_SSL_CA_PATH=/path/to/staging/ca.pem
KAFKA_STAGING_SSL_CERT_PATH=
KAFKA_STAGING_SSL_KEY_PATH=

# =============================================================================
# KAFKA - UAT ENVIRONMENT
# =============================================================================
KAFKA_UAT_BOOTSTRAP=kafka-uat.example.com:9093
KAFKA_UAT_SECURITY_PROTOCOL=SASL_SSL
KAFKA_UAT_SASL_MECHANISM=SCRAM-SHA-256
KAFKA_UAT_USERNAME=uat_user
KAFKA_UAT_PASSWORD=uat_password_here
KAFKA_UAT_SSL_CA_PATH=/path/to/uat/ca.pem
KAFKA_UAT_SSL_CERT_PATH=
KAFKA_UAT_SSL_KEY_PATH=

# =============================================================================
# KAFKA - PREPROD ENVIRONMENT
# =============================================================================
KAFKA_PREPROD_BOOTSTRAP=kafka-preprod.example.com:9093
KAFKA_PREPROD_SECURITY_PROTOCOL=SSL
KAFKA_PREPROD_SASL_MECHANISM=
KAFKA_PREPROD_USERNAME=
KAFKA_PREPROD_PASSWORD=
KAFKA_PREPROD_SSL_CA_PATH=/path/to/preprod/ca.pem
KAFKA_PREPROD_SSL_CERT_PATH=/path/to/preprod/client.pem
KAFKA_PREPROD_SSL_KEY_PATH=/path/to/preprod/client.key

# =============================================================================
# KAFKA - PRODUCTION ENVIRONMENT
# =============================================================================
KAFKA_PROD_BOOTSTRAP=kafka-prod.example.com:9093
KAFKA_PROD_SECURITY_PROTOCOL=SSL
KAFKA_PROD_SASL_MECHANISM=
KAFKA_PROD_USERNAME=
KAFKA_PROD_PASSWORD=
KAFKA_PROD_SSL_CA_PATH=/path/to/prod/ca.pem
KAFKA_PROD_SSL_CERT_PATH=/path/to/prod/client.pem
KAFKA_PROD_SSL_KEY_PATH=/path/to/prod/client.key

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================
MAX_WORKERS=10
DEFAULT_BATCH_SIZE=100
BATCH_LINGER_MS=5
REQUEST_TIMEOUT_MS=30000
